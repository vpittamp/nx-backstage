{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudId": "3eb5403f-dc28-47bb-8abd-5911cd4ca0a5",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/app-config.yaml",
      "{workspaceRoot}/app-config.*.yaml"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "build:backend": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true,
      "outputs": ["{workspaceRoot}/packages/backend/dist"]
    },
    "test": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default"],
      "cache": true
    },
    "tsc": {
      "inputs": ["default", "^default"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist-types"]
    }
  }
}
